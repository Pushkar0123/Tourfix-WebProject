<% layout("/layouts/boilerplate") -%>
    
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-8 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3"> <!--spacing add karna ka liya-> bootstrap styling mb-3 use kiya-->
        <label for="username" class="form-label">Username</label> <!--form-label and form-control from bootstrap knowledge-->
            <input 
                name="username" 
                id="username"
                type="text" 
                class="form-control"
                required 
            />
    </div>
        <div class="mb-3"> <!--spacing add karna ka liya-> bootstrap styling mb-3 use kiya-->
        <label for="password" class="form-label">Password</label> <!--foarm-label and form-control from bootstrap knowledge-->
            <input 
                name="password" 
                id="password"
                type="password" 
                class="form-control"
                required 
            />
            <br>
            <button class="btn btn-success"><b>Login</b></button>
        </div>
    </form>
    </div>
</div> 
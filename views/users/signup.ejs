<% layout("/layouts/boilerplate") -%>
    
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-8 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3"> <!--spacing add karna ka liya-> bootstrap styling mb-3 use kiya-->
        <label for="username" class="form-label">Username</label> <!--form-label and form-control from bootstrap knowledge-->
            <input 
                name="username" 
                id="username"
                type="text" 
                class="form-control"
                required 
            />
        <div class="valid-feedback"> Looks good!</div> <!--agar data sahi enter ho toh uske neche dikhya ga-->
    </div>

        <div class="mb-3"> <!--spacing add karna ka liya-> bootstrap styling mb-3 use kiya-->
        <label for="email" class="form-label">Email</label> <!--form-label and form-control from bootstrap knowledge-->
            <input 
                name="email" 
                id="email"
                type="email" 
                class="form-control"
                required 
            />
        </div>

        <div class="mb-3"> <!--spacing add karna ka liya-> bootstrap styling mb-3 use kiya-->
        <label for="password" class="form-label">Password</label> <!--form-label and form-control from bootstrap knowledge-->
            <input 
                name="password" 
                id="password"
                type="password" 
                class="form-control"
                required 
            />

            <button class="btn btn-success">SignUp</button>
        </div>
    </form>
    </div>
</div> 